<%- include('../partials/header') %>

<body class="main-page">
    <div class="main-container">

        <%- include('../partials/navbar') %>

        <div class="background">
            <div class="search-section">
                <h1>Welcome to <span>TrackTrail<span>â„¢</span>!</span></strong></h1>
                <p>Explore and manage music effortlessly</p>
                <input type="search" name="search" placeholder="Search for artists, albums, tracks...">
                <div class="artist-buttons">
                    <button class="button-album" onclick="location.href='/add-album'">Upload Album</button>
                    <button class="button-studio" onclick="location.href='/add-studio-session'">Plan Studio Session</button>
                </div>
            </div>
        </div>

        <div class="albums-section">
            <h1>Latest Albums</h1>
            <div class="albums">
                <% albums.forEach(album => { %>
                    <div class="album">
                        <img src="data:<%= album.image.contentType %>;base64,<%= album.image.data.toString('base64') %>" alt="<%= album.title %>">
                        <h3><%= album.title %></h3>
                        <h4><%= album.genre %></h4>
                        <p><%= album.artist %></p>
                    </div>
                <% }) %>
            </div>
        </div>

        <div class="studio-sessions-section">
            <h1>Upcoming Studio Sessions</h1>
            <div class="studio-sessions">
                <% studioSessions.forEach(studioSession => { %>
                    <div class="studio-session">
                        <i class="fa-solid fa-microphone" style="color: #000000;"></i>
                        <h2><%= studioSession.artist %></h2>
                        <h3><%= studioSession.title %></h3>
                        <p><strong><%= studioSession.date %></strong></p>
                        <p><strong>Description:</strong> <%= studioSession.details %></p>
                        <p><strong>Duration:</strong> <%= studioSession.duration %> min</p>
                    </div>
                <% }) %>
            </div>
        </div>

    </div>

    <%- include('../partials/footer') %>

    <script src="/js/userMenu.js"></script>
    <script src="/js/reload.js"></script>
    <script src="/js/search.js"></script>
</body>
</html>